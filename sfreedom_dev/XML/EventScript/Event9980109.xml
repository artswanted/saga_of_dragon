	<CMD type="Text" UIWndName="SFRM_EVENT_SCRIPT_TEXT" TextTTID="401164" AlignX="50" AlignY="80" WaitTime="4"/>
	<CMD type="waittime" time="5"/>

<!-- 더블업 줌업-->
	<CMD TYPE="MoveCamToTrigger" Target="DOUBLE_UP_2" MoveTime="1" CamActorDistance="600" VertRotAngle="40" CamMoveUpDistance="-20"/>
	<CMD TYPE="WaitCamera"/>
	<CMD type="Text" UIWndName="SFRM_EVENT_SCRIPT_TEXT" TextTTID="401165" AlignX="50" AlignY="80" WaitTime="4"/>
	<CMD type="waittime" time="5"/>	

	<!-- 여기까지만 ESC키 먹힘 -->
	<CMD TYPE="ClearEscScript"/>
	<!-- 꼭 해야 되는 연출 -->
	<CMD TYPE="ActivateEvent" EventId="9980106"/>



