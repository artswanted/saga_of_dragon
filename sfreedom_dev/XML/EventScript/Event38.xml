<?xml version="1.0" encoding="euc-kr"?>
<EVENT_SCRIPT>
	<!-- 퀘스트 보상 아이템 획득 -->
    <CMD TYPE="LockPlayerInput" Lock="TRUE"/>
    <CMD TYPE="LockPlayerInputMove" Lock="TRUE"/>
	<!-- 플레이어 이동을 막는다. -->
	<CMD TYPE="setmoviescene" enable="true" Time="1"/>
	<CMD type="waittime" time="1"/>
	<CMD TYPE="SetCameraModeEvent"/>
	<!-- 카메라를 이벤트 전용 카메라로 바꾼다. -->
	<CMD TYPE="MoveCamToActor" SpecialActor="ME" MoveTime="1" CamActorDistance="200" CamMoveUpDistance="-35"/>
	<CMD TYPE="WaitCamera"/>
	<CMD TYPE="SetActorDirection" SpecialActor="ME" Direction="2"/>
	<!-- 캐릭터가 말을한다. -->
	<CMD TYPE="Dialogue" NameTTID="505485" TitleTTID="505826" TextTTID="505820" FaceID="Helper_smile"/>
	<CMD TYPE="WaitDialogue"/>
	<CMD type="waittime" time="1"/>
    <CMD TYPE="CLOSE_DAILOGUE"/>
	<!-- 카메라를 나를 바라보게 하고 카메라 이동이 멈출 동안 PC는 기다린다.-->
	<CMD TYPE="MoveCamToActor" SpecialActor="ME" MoveTime="1"/>
	<CMD TYPE="WaitCamera"/>
	<CMD TYPE="SetCameraModeFollow" SpecialActor="ME"/>
	<!-- 카메라를 일반 모드로 변경 (게임 플레이 모드) -->
	<CMD TYPE="setmoviescene" enable="false" Time="0"/>
	<CMD type="waittime" time="0"/>
	<!-- 화면을 다시 정상적으로 보여줌 -->
	<CMD TYPE="LockPlayerInput" Lock="FALSE"/>
    <CMD TYPE="LockPlayerInputMove" Lock="false"/>
	<!-- 플레이어 이동 가능 -->
</EVENT_SCRIPT>
