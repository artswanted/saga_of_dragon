<?xml version="1.0" encoding="euc-kr"?>
<EVENT_SCRIPT>
	<!--서펜스 1차 오프닝 -->
    <CMD TYPE="waittime" time="1"/>
	<CMD TYPE="SetCameraModeEvent"/><!-- 이벤트 카메라로 변경한다. -->
	<CMD TYPE="LockPlayerInput" Lock="TRUE"/><!-- 플레이어 키를 막는다. -->
	<CMD TYPE="LockPlayerInputMove" Lock="TRUE"/><!-- 플레이어 이동을 막는다. -->

	<CMD TYPE="HideUI" enable="true"/>
	<CMD TYPE="Fade" FadeColor="0,0,0" FadeTime="1" FadeIn="false"/> <!--페이드 어둡게-->
	<CMD TYPE="WaitFade"/>
	<CMD TYPE="setmoviescene" enable="TRUE" Time="0"/> <!-- 무비 신 으로 변경한다 -->

	<CMD TYPE="AddActorFilter" ClassNo="1029590"/>
	<CMD TYPE="ShowActor" UnitType="UT_PLAYER" Show="false"/> <!--플레이어를 숨기기 -->
	<CMD TYPE="ShowActor" UnitType="UT_SUMMONED" Show="false"/> <!--소환체를 숨기기 -->
	<CMD TYPE="ShowActor" UnitType="UT_GROUNDBOX" Show="false"/> <!--드랍아이템를 숨기기 -->
	<CMD TYPE="ShowActor" UnitType="UT_NPC" Show="false"/>
	<CMD TYPE="ShowActor" UnitType="UT_MONSTER" Show="false"/>
	<CMD TYPE="ShowActor" UnitType="UT_BOSSMONSTER" Show="false"/><!--보스몬스터 감추기-->
	<CMD TYPE="ShowActor" UnitType="UT_OBJECT" Show="false"/>
	<CMD TYPE="ShowActor" ClassNo="7282500" Show="false" Save="false"/> <!-- 실제 서펜스 숨기기 -->
	<CMD TYPE="ShowActor" ClassNo="7282900" Show="false" Save="false"/> <!-- 실제 분노 피오스 숨기기 -->

	

	<CMD TYPE="AddNPC" ClassNo="1029590" NameTTID="521238" SpawnPos="10040.3,1900.864,-179.4460"/>
	<CMD TYPE="PlayAnimation" ClassNo="1029590" SlotName="opening_01"/><!-- 오프닝 1번-->
	<CMD TYPE="SetFollowCamera" NameTTID="521238" CameraID="Camera01" UseActorPositionAsSoundListener="true" /><!-- 오프닝 카메라로 변경 -->
	<CMD TYPE="Fade" FadeColor="0,0,0" FadeTime="1" FadeIn="TRUE"/><!-- 화면 밝게-->
	<CMD TYPE="WaitFade"/>
	<CMD TYPE="WaitTime" Time="4.0"/><!--  시간을 기다림-->
	
	<CMD TYPE="PlayAnimation" ClassNo="1029590" SlotName="opening_02"/><!-- 오프닝 2번-->
	<CMD TYPE="WaitTime" Time="8.5"/><!-- 오프닝 시간을 기다림-->
	

	<CMD TYPE="PlayAnimation" ClassNo="1029590" SlotName="opening_03"/><!-- 오프닝 3번-->
    <CMD TYPE="WaitTime" Time="8.5"/><!-- 오프닝 시간을 기다림-->


	
    <CMD TYPE="Fade" FadeColor="0,0,0" FadeTime="0.5" FadeIn="false"/><!-- 화면 어둡게-->
	<CMD TYPE="WaitFade"/>
	<CMD TYPE="ShowActor" ClassNo="1029590" Show="false"/>
	<CMD TYPE="RemoveActor" ClassNo="1029590"/>

	<CMD TYPE="ShowActor" ClassNo="7282500" Show="true" Save="true"/> <!-- 서펜스 보이기 -->
	<CMD TYPE="ShowActor" ClassNo="7282900" Show="true" Save="true"/> <!-- 분노 피오스 보이기 -->
	<CMD TYPE="SetCameraModeFollow" SpecialActor="ME"/> <!-- 카메라가 나를 다시 따라오세 한다.-->
	<CMD TYPE="ClearActorFilter"/>
	
    <CMD TYPE="setmoviescene" enable="false" Time="0"/>
	<CMD TYPE="ShowActor" UnitType="UT_PLAYER" Show="true"/> <!--플레이어를 보이기 -->
	<CMD TYPE="ShowActor" UnitType="UT_SUMMONED" Show="true"/> <!--소환체를 보이기 -->
	<CMD TYPE="ShowActor" UnitType="UT_GROUNDBOX" Show="true"/> <!--드랍아이템를 보이기 -->
	<CMD TYPE="ShowActor" UnitType="UT_NPC" Show="true"/>
	<CMD TYPE="ShowActor" UnitType="UT_MONSTER" Show="true"/>
	<CMD TYPE="ShowActor" UnitType="UT_BOSSMONSTER" Show="true"/><!--보스몬스터 감추기-->
	<CMD TYPE="ShowActor" UnitType="UT_OBJECT" Show="true"/>
    <CMD TYPE="LockPlayerInput" Lock="FALSE"/>
	<CMD TYPE="LockPlayerInputMove" Lock="false"/>

	<CMD TYPE="Fade" FadeColor="0,0,0" FadeTime="1" FadeIn="TRUE"/><!-- 화면 밝게-->
	<CMD TYPE="WaitFade"/>
	<CMD TYPE="HideUI" enable="false"/>

	<CMD TYPE="waittime" time="1"/>
	<CMD TYPE="CallUI" UIWndName="FRM_WARNING"/>
</EVENT_SCRIPT>

