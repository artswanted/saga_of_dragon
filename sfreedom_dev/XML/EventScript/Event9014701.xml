	<CMD type="Text" UIWndName="SFRM_EVENT_SCRIPT_TEXT" TextTTID="401167" AlignX="50" AlignY="50" WaitTime="4"/>
	<CMD type="waittime" time="5"/>
	
	<CMD type="CallUI" UIWndName = "FRM_MISSION_START_F7"/>	
